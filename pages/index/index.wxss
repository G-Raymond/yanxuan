.swiper-container {
  height: 417rpx;
  width: 100%;
}

.swiper {
  width: 100%;
  height: 100%;
}

.swiper-item {
  width: 100%;
  height: 417rpx;
}

.swiper-image {
  width: 100%;
}

.categories {
  display: flex;
  padding: 20rpx;
  background: #fff;
  margin-bottom: 10rpx;
  justify-content: space-around;
}

.categories-item {
  flex: 1;
  /* height: 60rpx; */
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
}

.category-img {
  width: 58rpx;
  height: 58rpx;
}

.category-label {
  text-align: center;
  width: 100%;
  margin-top: 10rpx;
  font-size: 20rpx;
}