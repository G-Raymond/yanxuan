.search-bar-container {
  height: 80rpx;
  background-color: #fff;
  border-radius: 32rpx;
  -webkit-border-radius: 32rpx;
  -moz-border-radius: 32rpx;
  -ms-border-radius: 32rpx;
  -o-border-radius: 32rpx;
  display: flex;
  /* flex-direction: column; */
  align-items: center;
  padding: 20rpx;
  font-size: 20rpx;
  color: #000;
}

.search-input-container {
  flex: 1;
  height: 100%;
  height: 56rpx;
  position: relative;
  margin-left: 20rpx;
  background: #efefef;
  padding: 0 50rpx;
  background: #ededed;
  border-radius: 32rpx;
  -webkit-border-radius: 32rpx;
  -moz-border-radius: 32rpx;
  -ms-border-radius: 32rpx;
  -o-border-radius: 32rpx;
  display: flex;
  align-items: center;
}
.search-input {
  flex: 1;
}
.search-icon {
  position: absolute;
  top: 15rpx;
  left: 15rpx;
  background: url('http://yanxuan.nosdn.127.net/hxm/yanxuan-wap/p/20161201/style/img/icon-normal/search2-2fb94833aa.png') center no-repeat;
  width: 28rpx;
  height: 28rpx;
  background-size: 100%;
}